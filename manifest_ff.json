{
  "name": "Rotate YouTube Video",
  "version": "1.0",
  "description": "Rotate and scale YouTube video.",
  "manifest_version": 2,

  "permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "icons": {
    "16": "television-16.png",
    "48": "television-48.png",
    "64":"television-64.png",
    "128": "television-128.png",
    "256": "television-256.png"
 }
}